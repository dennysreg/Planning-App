<%= form_for(@usuario) do |f| %>
	<%= render 'shared/error_messages' %>
	<div class="field">
		<%= f.label :nombre %> <br>
		<%= f.text_field :nombre %>
	</div>

	<div class="field">
		<%= f.label :email %> <br>
		<%= f.text_field :email %>
	</div>
	<div class="field">
		<%= f.label :password %> <br>
		<%= f.password_field :password %>
	</div>

	<div class="field">
		<%= f.label :password_confirmation %> <br>
		<%= f.password_field :password_confirmation %>
	</div>
	<!-- post -->
	<div class="actions">
		<%= f.submit 'Guardar cambios' %> 
	</div>
<% end %>
